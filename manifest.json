{
  "manifest_version": 3,
  "name": "RatScale",
  "version": "1.1.0",
  "description": "Create beautiful icon sets for apps and extensions with multiple export sizes. Works on desktop and mobile.",
  "action": {
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "32": "icons/icon_32x32.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png"
    },
    "default_title": "RatScale",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "32": "icons/icon_32x32.png",
    "48": "icons/icon_48x48.png",
    "64": "icons/icon_64x64.png",
    "128": "icons/icon_128x128.png",
    "192": "icons/icon_192x192.png",
    "256": "icons/icon_256x256.png",
    "512": "icons/icon_512x512.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "downloads",
    "storage"
  ],
  "optional_permissions": [],
  "host_permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.html", "*.js", "*.css", "*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "author": "RatLabs",
  "homepage_url": "https://github.com/labrat-0/RatScale_1.1.0",
  "minimum_chrome_version": "88",
  "minimum_edge_version": "88",
  "short_name": "RatScale",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Open RatScale"
    }
  }
} 